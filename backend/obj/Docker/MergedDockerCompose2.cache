services:
  mecor.api:
    build:
      context: C:\Dev\GitHub\ferhrosa\mecor\backend
      dockerfile: Mecor.Api/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Mecor.Api
      target: base
    container_name: Mecor.Api_1
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: mecorapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/bin/Debug/netcoreapp3.1/Mecor.Api.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - target: 80
    - target: 443
    tty: true
    volumes:
    - C:\Dev\GitHub\ferhrosa\mecor\backend\Mecor.Api:/app:rw
    - C:\Users\ferhr\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\ferhr\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\ferhr\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Microsoft\Xamarin\NuGet:/root/.nuget/fallbackpackages:ro
    - C:\Users\ferhr\.nuget\packages:/root/.nuget/packages:ro
    - C:\Dev\GitHub\ferhrosa\mecor\backend:/src:rw
version: '3.4'